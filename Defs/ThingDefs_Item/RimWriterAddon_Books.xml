<Defs>

  <ThingDef ParentName="Jecrell_Book">
    <defName>RimWriter_Hentai</defName>
    <label>hentai book</label>
    <description>A collection of lewd sequential art.</description>
    <graphicData>
      <texPath>Item/Resource/Journal/RimWriterHentai</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <onGroundRandomRotateAngle>15</onGroundRandomRotateAngle>
      <drawSize>0.5</drawSize>
    </graphicData>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>RimWriterNamerHentai</nameMaker>
        <descriptionMaker>RimWriterArtDescription_Hentai</descriptionMaker>
      </li>
    </comps>
	<tradeTags>
      <li>ExoticMisc</li>
      <li>Books</li>
    </tradeTags>
	<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>50</weight>
					<only>(255,255,255,255)</only>
				</li>
			</options>
	</colorGenerator>
  </ThingDef>
  
